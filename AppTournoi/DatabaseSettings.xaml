<Window x:Class="AppTournoi.DatabaseSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTournoi"
        mc:Ignorable="d"
        Title="Paramètres BDD" Height="500" Width="400" MinHeight="500" MinWidth="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Adresse IP de la base de données :" Margin="10,10,0,0"/>
            <TextBox Name="IpAddressTextBox" Margin="10"/>

            <TextBlock Text="Port d'écoute :" Margin="10,10,0,0"/>
            <TextBox Name="PortTextBox" Margin="10"/>

            <TextBlock Text="Nom d'utilisateur :" Margin="10,10,0,0"/>
            <TextBox Name="UsernameTextBox" Margin="10"/>

            <TextBlock Text="Mot de passe :" Margin="10,10,0,0"/>
            <PasswordBox Name="PasswordBox" Margin="10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Content="Enregistrer" Width="100" Margin="10" Click="SaveButton_Click"/>
                <Button Content="Annuler" Width="100" Margin="10" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>