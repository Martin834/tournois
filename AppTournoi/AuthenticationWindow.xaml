<Window x:Class="AppTournoi.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authentication" Height="200" Width="400" MinHeight="200" MinWidth="400" MaxHeight="250" MaxWidth="500">
    <Grid>
        <Label Content="Nom d'utilisateur:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Width="250"/>

        <Label Content="Mot de passe:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="120,50,0,0" VerticalAlignment="Top" Width="250"/>

        <Button Content="Se connecter" HorizontalAlignment="Left" Margin="87,100,0,0" VerticalAlignment="Top" Width="100" Click="LoginButton_Click"/>
        <Button Content="Annuler" HorizontalAlignment="Left" Margin="245,100,0,0" VerticalAlignment="Top" Width="100" Click="AnnulerButton_Click"/>
    </Grid>
</Window>